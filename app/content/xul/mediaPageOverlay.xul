<!-- 

  This overlay is loaded into all media pages (windows used to render
  a media list views), and supplies common functionality needed for
  elements like the sb-playlist widget.

  See app/content/mediapages and http://developer.songbirdnest.com
  
-->

<!DOCTYPE overlay SYSTEM "chrome://songbird/locale/songbird.dtd" >
<overlay
  id="mediaPageOverlay"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
>

  <script type="application/x-javascript" 
   src="chrome://songbird/content/scripts/overlayLoader.js" />
  <script type="application/x-javascript" 
   src="chrome://songbird/content/scripts/sbDataRemoteUtils.js"/>
#ifdef METRICS_ENABLED
  <script type="application/x-javascript" 
   src="chrome://songbird/content/scripts/metrics.js"/>
#endif
  <script type="application/x-javascript"  
   src="chrome://songbird/content/scripts/windowUtils.js"/> 
  <script type="application/x-javascript"  
   src="chrome://songbird/content/scripts/playerOpen.js"/> 

</overlay>
