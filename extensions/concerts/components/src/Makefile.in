DEPTH = ../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@

include $(DEPTH)/build/autodefs.mk

IS_EXTENSION = 1

CPP_SRCS = sbSongkickDBService.cpp \
           sbSongkickDBServiceComponent.cpp \
           $(NULL)

CPP_EXTRA_INCLUDES = $(DEPTH)/extensions/concerts/components/public \
                     $(DEPTH)/components/dbengine/public \
                     $(MOZSDK_IDL_DIR) \
                     $(MOZSDK_INCLUDE_DIR)/necko \
                     $(NULL)

DYNAMIC_LIB_EXTRA_IMPORTS = plds4 \
							$(NULL)
							
DYNAMIC_LIB_STATIC_IMPORTS += \
 components/moz/strings/src/sbMozStringUtils \
 components/moz/streams/src/sbMozStreams \
 components/moz/threads/src/sbMozThreads \
 $(NULL)

IS_COMPONENT = 1

DYNAMIC_LIB = sbConcertsComponent

SONGBIRD_PP_RESOURCES = $(srcdir)/Songkick.js.in \
                        $(NULL)

SONGBIRD_COMPONENTS += $(CURDIR)/Songkick.js \
                       $(NULL)

include $(topsrcdir)/build/rules.mk

